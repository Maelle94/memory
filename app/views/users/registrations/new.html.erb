<h2>Sign up</h2>

<div class="row justify-content-center">
  <div class="col-md-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :username, class: "sr-only" %><br />
        <%= f.text_field :username, autofocus: true, placeholder: true, required: true, class: "form-control"  %>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "sr-only"  %><br />
        <%= f.email_field :email, placeholder: true, required: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "sr-only" %><br />
        <%= f.password_field :password, placeholder: true, required: true, autocomplete: "off" , class: "form-control" %>
        <% if @validatable %>
          <small><%= @minimum_password_length %> characters minimum</small>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: "sr-only" %><br />
        <%= f.password_field :password_confirmation, placeholder: true, required: true, autocomplete: "off" , class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-primary btn-block mt-4" %>
      </div>
    <% end %>
  </div>
</div>
